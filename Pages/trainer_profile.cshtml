                </td>

            </tr>
            @*Trainer Details*@
            <tr>
                <td> </td>
                <td>
                    <hr class="solid" />
                    <span style="font-weight:bold; color:#32323b"> Location </span>
                    <img src="~/img/location.png" width="auto" height="auto" class="location" />
                </td>
            </tr>
        </table>

    </div>
    <hr class="solid" />



</body>

<style>
    /*for testing layout*/

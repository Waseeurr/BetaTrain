                </td>
                <td>
                    @*Trainer Details*@
                    <span style="color:#202026; font-size:200%"> @Model.User.Username </span>
                    @if (@Model.Trainer.Gender == "Femail")
                    {
                        <img src="~/images/nv.png" height="20" width="20" /> }
                    else if (@Model.Trainer.Gender == "Male")
                    {
                        <img src="~/images/nan.png" height="20" width="20" /> }
                    else
                    {
                        <img src="~/images/qita.png" height="20" width="20" />}

                    <br />
                    <img src="~/img/TrainerPro - Website_Health & Fitness Icon.svg" alt="fitnessicon" width="40px" height="auto" />
                    <span style="color:crimson">@Model.Trainer.KindOfTrainer</span> |
                    @if (@Model.Trainer.TeachingType == "In person")
                    {
                        <img src="~/img/inperson.svg" width="16px" height="auto" /> }
                    else
                    {
                        <img src="~/img/online.svg" width="16px" height="auto" />}
                    @Model.Trainer.TeachingType



                    <br />

                    <img src="~/img/fullstar.svg" width="20px" height="auto" />

                    <img src="~/img/fullstar.svg" width="20px" height="auto" />


                    <img src="~/img/fullstar.svg" width="20px" height="auto" />

                    <img src="~/img/halfstar.svg" width="20px" height="auto" />
                    37 reviews
                    @*Biography*@
                    <hr class="solid" />
                    <span style="font-weight:bold; color:#32323b"> Biography </span>
                    <br />
                    @Model.Trainer.Certificate

                    <hr class="solid" />
                    <span style="font-weight:bold; color:#32323b"> Classes/Activities </span>
                    <br />
                    <div class="wrap"><a href="#" onClick="return false;" class="button">Personal Training</a> </div>
                    <br />
                    <div class="wrap"><a href="#" onClick="return false;" class="button">Swimming Coach</a> </div>

                    <hr class="solid" />
                    <span style="font-weight:bold; color:#32323b"> Recent Reviews </span>
                    <br />
                    “Cras vel semper dolor. Praesent egestas accumsan lorem, sed
                    blandit enim mattis ac. Nullam purus nunc, fermentum.”
                    <br />
                    <img src="~/img/fullstar.svg" width="20px" height="auto" />
                    <img src="~/img/fullstar.svg" width="20px" height="auto" />
                    <img src="~/img/fullstar.svg" width="20px" height="auto" />
                    <img src="~/img/fullstar.svg" width="20px" height="auto" />
                    <img src="~/img/fullstar.svg" width="20px" height="auto" />
                    - John H, Trainee

                    <hr class="solid" />
                    <span style="font-weight:bold; color:#32323b"> Trainees </span>
                    <br />
                    @if (Model.Trainees != null)
                    {
                        foreach (var item in Model.Trainees)
                        {
                            <a href="/trainee_profile?id=@item.Id"><img src="@item.ImageUrl" width="50px" height="auto" class="user_image" /> </a>
                            if (item.Status == "0")
                            {
                                <a href="#" v-on:click="Agree(@item.Id)">agree</a>
                                <a href="#" v-on:click="Reject(@item.Id)">reject</a>
                            }
                        }
                    }

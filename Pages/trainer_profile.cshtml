    <div id="app">
        <table class="center">
            <tr>
                <td>
                    <img src='@Model.Trainer.ImageUrl' style="width:300px;height:300px;" />
                    @*Message trainer button*@
                    <br /> <br />
                    <div class="wrap"><a href="#" v-on:click="Connect(@Model.Trainer.Id)" class="button">Connect</a> </div>
                    <br />
                    <div class="wrap"><a href="trainer_profile_edit" class="button">Account Setting</a> </div>
                    <br />
                    <div class="wrap"><a href="/Chat" class="button">Send a message</a> </div>

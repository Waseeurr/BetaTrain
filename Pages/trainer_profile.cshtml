    .results {
        color: silver;
        text-align: center;
    }

    .button {
        width: 140px;
        height: 50px;
        line-height: 50px;
        font-family: 'Roboto', sans-serif;
        font-size: 11px;
        text-transform: uppercase;
        font-weight: 500;
        color: crimson;
        background-color: #fff;
        border: none;
        border-radius: 25px;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        outline: none;
        text-align: center;
        cursor: pointer;
        display: grid;
    }

        .button:hover {
            background-color: aliceblue;
            box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
            color: crimson;
        }

        .button:focus {
            background-color: lavender;
            box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
            color: crimson;
        }

        .button:active {
            background-color: white;
            box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
            color: crimson;
            transform: translateY(-7px);
        }

    .checked {
        color: orange;
    }
</style>

